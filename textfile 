// review-state.guard.ts
import { Injectable } from '@angular/core';
import { CanActivate } from '@angular/router';
import { BrowserRefreshHelperService } from './browser-refresh-helper.service';

@Injectable({ providedIn: 'root' })
export class ReviewStateGuard implements CanActivate {
  constructor(private helper: BrowserRefreshHelperService) {}

  canActivate(): boolean {
    this.helper.logStatus();

    if (this.helper.wasBrowserReload()) {
      console.log('✅ Guard: Reload');
    } else if (this.helper.wasColdLoad()) {
      console.log('✅ Guard: Cold load');
    } else if (this.helper.wasRouteNavigation()) {
      console.log('✅ Guard: Internal navigation');
    }

    return true;
  }
}