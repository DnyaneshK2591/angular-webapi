@Injectable({ providedIn: 'root' })
export class ReviewStateGuard implements CanActivate {
  constructor(private refreshHelper: BrowserRefreshHelperService) {}

  canActivate(): boolean {
    if (this.refreshHelper.wasBrowserReload()) {
      console.log('Browser reload detected');
    } else if (this.refreshHelper.wasColdLoad()) {
      console.log('Cold load detected');
    } else if (this.refreshHelper.wasRouteNavigation()) {
      console.log('Normal route navigation');
    }

    return true;
  }
}